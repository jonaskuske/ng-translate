{
	"name": "ng-translate",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"packageManager": "yarn@4.4.1",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"watch": "ng build --watch --configuration development",
		"postinstall": "husky || true",
		"lint": "ng lint"
	},
	"lint-staged": {
		"*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,html}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{css,md,json,yml,webmanifest}": "prettier --write"
	},
	"prettier": {
		"arrowParens": "always",
		"semi": false,
		"useTabs": true,
		"trailingComma": "all",
		"singleQuote": true
	},
	"dependencies": {
		"@angular/animations": "^18.2.6",
		"@angular/common": "^18.2.6",
		"@angular/compiler": "^18.2.6",
		"@angular/core": "^18.2.6",
		"@angular/forms": "^18.2.6",
		"@angular/platform-browser": "^18.2.6",
		"@angular/platform-browser-dynamic": "^18.2.6",
		"@angular/router": "^18.2.6",
		"@db-ui/components": "^0.4.0",
		"@db-ui/ngx-components": "^0.4.0",
		"idb": "^8.0.0",
		"rxjs": "~7.8.1",
		"tslib": "^2.7.0"
	},
	"devDependencies": {
		"@angular-eslint/builder": "^18.3.1",
		"@angular/build": "^18.2.6",
		"@angular/cli": "^18.2.6",
		"@angular/compiler-cli": "^18.2.6",
		"@eslint/js": "^9.11.1",
		"angular-eslint": "18.3.1",
		"eslint": "^9.11.1",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"typescript": "~5.5.4",
		"typescript-eslint": "^8.7.0"
	},
	"dependenciesMeta": {
		"@angular/cli@18.2.1": {
			"unplugged": true
		}
	}
}
