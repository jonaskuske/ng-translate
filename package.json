{
	"name": "ng-translate",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"packageManager": "yarn@4.4.1",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"watch": "ng build --watch --configuration development",
		"postinstall": "husky || true",
		"lint": "ng lint"
	},
	"lint-staged": {
		"*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,html}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{css,md,json,yml,webmanifest}": "prettier --write"
	},
	"prettier": {
		"arrowParens": "always",
		"semi": false,
		"useTabs": true,
		"trailingComma": "all",
		"singleQuote": true
	},
	"dependencies": {
		"@angular/animations": "^18.2.13",
		"@angular/common": "^18.2.13",
		"@angular/compiler": "^18.2.13",
		"@angular/core": "^18.2.13",
		"@angular/forms": "^18.2.13",
		"@angular/platform-browser": "^18.2.13",
		"@angular/platform-browser-dynamic": "^18.2.13",
		"@angular/router": "^18.2.13",
		"@db-ux/core-components": "^2.1.2",
		"@db-ux/ngx-core-components": "^2.1.2",
		"idb": "^8.0.3",
		"rxjs": "~7.8.2",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@angular-eslint/builder": "^18.4.3",
		"@angular/build": "^18.2.19",
		"@angular/cli": "^18.2.19",
		"@angular/compiler-cli": "^18.2.13",
		"@eslint/js": "^9.27.0",
		"angular-eslint": "18.4.3",
		"eslint": "^9.27.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"prettier": "^3.5.3",
		"typescript": "~5.5.4",
		"typescript-eslint": "^8.33.0"
	},
	"dependenciesMeta": {
		"@angular/cli@18.2.1": {
			"unplugged": true
		}
	}
}
