{
	"name": "ng-translate",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"packageManager": "yarn@4.9.1",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"watch": "ng build --watch --configuration development",
		"postinstall": "husky || true",
		"lint": "ng lint"
	},
	"lint-staged": {
		"*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,html}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{css,md,json,yml,webmanifest}": "prettier --write"
	},
	"prettier": {
		"arrowParens": "always",
		"semi": false,
		"useTabs": true,
		"trailingComma": "all",
		"singleQuote": true
	},
	"dependencies": {
		"@angular/common": "^20.1.0",
		"@angular/compiler": "^20.1.0",
		"@angular/core": "^20.1.0",
		"@angular/forms": "^20.1.0",
		"@angular/platform-browser": "^20.1.0",
		"@angular/router": "^20.1.0",
		"@db-ux/core-components": "^2.4.1",
		"@db-ux/ngx-core-components": "^2.4.1",
		"idb": "^8.0.3",
		"rxjs": "~7.8.2",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@angular-eslint/builder": "^20.1.1",
		"@angular/build": "^20.0.0",
		"@angular/cli": "^20.0.5",
		"@angular/compiler-cli": "^20.0.0",
		"@eslint/js": "^9.27.0",
		"angular-eslint": "19.6.0",
		"eslint": "^9.30.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.35.1"
	},
	"dependenciesMeta": {
		"@angular/cli@20.0.0": {
			"unplugged": true
		}
	}
}
